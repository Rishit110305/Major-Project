<% layout("/layouts/boilerplate") -%>

<div class="row mt-4">

  <!-- LISTING TITLE -->
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <!-- LISTING CARD -->
  <div class="card col-6 offset-3 show-card listing-card">
    <img 
      src="<%= listing.image.url || 'https://images.unsplash.com/photo-1625505826533-5c80aca7d157' %>" 
      class="card-img-top show-img"
      alt="Listing_img"
    >
    <div class="card-body">
      <p class="card-text">Owned by: <i><%= listing.owner.username %></i></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>

  <!-- OWNER CONTROLS -->
  <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="mt-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    </div>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="mt-2">
      <button class="btn btn-dark offset-10" style="color:red;">Delete Permanently</button>
    </form>
  <% } %>

  <!-- REVIEW FORM -->
  <% if (currUser) { %>
    <div class="col-8 offset-3 mb-3 mt-4">
      <h4>Leave a Review</h4>
      <hr>

      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <!-- STAR RATING -->
        <fieldset class="starability-slot mb-3">
          <legend class="form-label">Rating</legend>
          <input type="radio" id="rate1" name="review[rating]" value="1" checked required />
          <label for="rate1">1 star</label>
          <input type="radio" id="rate2" name="review[rating]" value="2" />
          <label for="rate2">2 stars</label>
          <input type="radio" id="rate3" name="review[rating]" value="3" />
          <label for="rate3">3 stars</label>
          <input type="radio" id="rate4" name="review[rating]" value="4" />
          <label for="rate4">4 stars</label>
          <input type="radio" id="rate5" name="review[rating]" value="5" />
          <label for="rate5">5 stars</label>
        </fieldset>

        <!-- COMMENT -->
        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comments for review.</div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  <% } %>

  <hr>

  <!-- ALL REVIEWS -->
  <div class="col-8 offset-3 mb-4">
    <% if(listing.reviews.length > 0) { %>
      <div class="row">
        <p><b>All Reviews</b></p>
        <% for (let review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="starability-result card-text" data-rating="<%= review.rating || 1 %>"></p>

              <% if (currUser && review.author._id.equals(currUser._id)) { %>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mt-2 mb-2">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <!-- MAP SECTION -->
  <div class="col-8 offset-3 mb-4">
    <h3>Where you'll be</h3>
    <div id="map"
         style="height:350px; margin-top:20px; border-radius:10px;"
         data-coordinates='<%- JSON.stringify(listing.geometry ? listing.geometry.coordinates : [77.2090, 28.6139]) %>'
         data-title="<%= listing.title %>">
    </div>
  </div>
</div>

<!-- MAP SCRIPT -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  function initMapWhenReady() {
    if (typeof L === 'undefined') {
      setTimeout(initMapWhenReady, 50);
      return;
    }

    const mapDiv = document.getElementById('map');
    if (!mapDiv) return;

    let coords;
    try {
      coords = JSON.parse(mapDiv.dataset.coordinates || '[]');
    } catch {
      coords = [];
    }

    const fallback = [77.2090, 28.6139];
    if (!Array.isArray(coords) || coords.length < 2) coords = fallback;

    const lng = Number(coords[0]);
    const lat = Number(coords[1]);

    const map = L.map('map').setView([lat, lng], 12);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    L.marker([lat, lng])
      .addTo(map)
      .bindPopup(`<b>${mapDiv.dataset.title}</b>`)
      .openPopup();

    setTimeout(() => map.invalidateSize(), 250);
  }

  initMapWhenReady();
});
</script>
